CC=gcc
SRC=main.c school.c
NAME=school
OBJ= $(CC) $(SRC) -Wall -Werror -Wextra -pedantic -o
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: clean $(NAME)

$(NAME): $(SRC) m.h
	$(CC) -Wall -Werror -Wextra -pedantic $^ -o $@

clean: 
	@$(RM) *~ *.swp *.swo *.swn *.out *.exe $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
