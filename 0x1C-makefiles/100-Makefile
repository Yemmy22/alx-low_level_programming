CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

$(OBJ): $(SRC)
	$(CC) -c $(CFLAGS) $^

clean:
	$(RM) $(OBJ) $(NAME)

oclean: clean

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re

ifeq ($(wildcard m.h),)
$(error Header file m.h is missing!)
endif

