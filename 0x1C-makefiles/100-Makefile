CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: clean $(NAME)

$(NAME): $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $^ -o $@

$(OBJ): m.h

clean: 
	@$(RM) *~ *.swp *.swo *.swn *.out *.exe $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
